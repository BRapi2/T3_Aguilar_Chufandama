@model T3_Apellido_Nombre.Models.Libro
@{
    ViewData["Title"] = "Eliminar Libro";
}

<h2>Eliminar Libro</h2>

<div>
    <h4>¿Está seguro que desea eliminar este libro?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Titulo</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
